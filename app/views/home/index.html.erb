<h1> Welcome to Quizr </h1>

<h3> Latest Quizzes </h3>

<% @quizzes.each do |quiz| %>
  <ul>
    <li><%= quiz.name %></li>
    <li><%= quiz.questions.count %> questions</li>
    <%= submit_tag "Create quiz", user_quizzes_path, :method => 'post', :locals => {:quiz_id => quiz.id } %>
  </ul>
<% end %>

<h3> Users </h3>
<% @users.each do |user| %>
  <ul>
    <li><%= link_to user.name, user %></li>
  </ul>
  <% end %>
