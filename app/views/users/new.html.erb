<%= simple_form_for @user, :remote => true do |f| %>
  <%= f.input :name, input_html: { class: 'name' } %>
  <br>
  <%= f.input :email, input_html: { class: 'email' } %>
  <br>
  <%= f.input :address, input_html: { class: 'address' } %>
  <br>
  <%= f.input :password, input_html: { class: 'password' } %>
  <br>
  <%= f.input :password_confirmation, input_html: { class: 'password_confirmation' } %>
  <br>
  <br>
  <%= f.button :submit %>
<% end %>