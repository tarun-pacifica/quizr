<%= @user.name %>

<h3>Quizzes completed</h3>


<% @current_user.quizzes.each do |quiz| %>
  <h3><%= link_to quiz.name, quiz %></h3>
</p>Quiz complete? <%= @current_user.user_quizzes.where(:quiz_id =>quiz.id).first.complete? %></p>
<% if @current_user.user_quizzes.where(:quiz_id =>quiz.id).first.complete? %>
  <p>Your Score: <%=(@current_user.user_quizzes.where(:quiz_id =>quiz.id).first.user_answers.where(:is_correct => true).count.to_f)/(quiz.questions.count) * 100 %></p>
<% end %>
  <% quiz.questions.each do |question| %>
    <p><%= question.content %> </p>
    <%= @current_user.user_answers.where(:question_id => question.id).count != 0  %></%>
    <% end %>

<% end %>
