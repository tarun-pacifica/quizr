<h1>Form</h1>

<%= simple_form_for @quiz do |f| %>
  <%= f.input :name %>
  <h4>Questions</h4>
  <div id="questions">
    <%= f.simple_fields_for :questions do |question| %>
      <%= render "question_fields", :f => question %>
      <% end %>
      <div class="links">
      <%= link_to_add_association 'add question', f, :questions, :render_options => {:wrapper => 'bootstrap' } %>
    </div>
      <%= f.button :submit, :disable_with => 'Please wait ...' %>
  <% end %>
</div>